# .-.path
# Used to extend $PATH

test "$SILENT" == false && echo -e '*  .- Paths\t\t\t\t*'

# Path - Add ~/bin
if [ -d $HOME/bin ]; then
    export PATH="$HOME/bin:$PATH";
fi

# Add rbenv (bin & shims)
if [ -d $HOME/.rbenv/bin ]; then
    export PATH="$HOME/.rbenv/bin:$HOME/.rbenv/shims:$PATH"
fi

# Add MongoDB
if [ -d $HOME/.rbenv/bin ]; then
    export PATH="$HOME/bin/mongodb/bin:$PATH"
fi